# install apache if needed
# if [ ! -d $APACHE_PATH ]; then
echo "-----> Bundling Apache"
curl  --location $APACHE_BUNDLE1 | tar xz
echo "-----> files extracted here"
echo "-----> ls extract"
#	echo $PWD
echo "-----> ls -al /tmp/app"
ls -al /tmp/app
	
#

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cat $APACHE_PATH/conf/httpd.conf

# update config files
#cp $LP_DIR/conf/cjd.conf $APACHE_CJD_PATH/conf
#cp $APACHE_CJD_PATH/conf/cjd.conf $APACHE_CJD_PATH/conf/httpd.conf
#cat $APACHE_CJD_PATH/conf/httpd.conf

#mv httpd /app/.
#mv perl /app/.
#mv www /app/.

echo "-----> list /app"
ls -al /home/vcap/app


echo "-----> list /app1"
ls -al /app

echo "-----> installing apache2 via apt-get"
echo "-----> list /app1"
#apt-get install apache2


cat >>boot.sh <<EOF
sed -i 's/Listen 80/Listen '\$PORT'/' /app/${APACHE_PATH}/conf/httpd.conf
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/${APACHE_PATH}/conf/httpd.conf;
done
touch /app/${APACHE_PATH}/logs/error_log
touch /app/${APACHE_PATH}/logs/access_log
tail -F /app/${APACHE_PATH}/logs/error_log &
tail -F /app/${APACHE_PATH}/logs/access_log &

#sed -i 's/Listen 80/Listen '\$PORT'/' /app/${APACHE_CJD_PATH}/conf/httpd.conf
