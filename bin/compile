#!/usr/bin/env bash

# fail fast
set -e

echo "-----> Bundling Apache 0"

APACHE_BUNDLE="http://s3.lstoll.net/buildpacks/httpd_2.2.21-mod_perl_2.0.5.tar.gz"
MOD_PERL_BUNDLE="http://perl.apache.org/dist/mod_perl-2.0.5.tar.gz"
APACHE_PATH="httpd"

BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

echo "-----> build dir...."
echo $BUILD_DIR
echo "-----> cache dir...."
echo $CACHE_DIR
echo "-----> lp dir...."
echo $LP_DIR


