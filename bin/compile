#!/usr/bin/env bash

# fail fast
set -e

echo "-----> Bundling Apache 0"

APACHE_BUNDLE="http://s3.lstoll.net/buildpacks/httpd_2.2.21-mod_perl_2.0.5.tar.gz"
APACHE_BUNDLE1="https://s3.us-east-2.amazonaws.com/cjd-buildpack/httpd-2.4.23-linux-x64.tgz"
MOD_PERL_BUNDLE="http://perl.apache.org/dist/mod_perl-2.0.5.tar.gz"

APACHE_PATH="httpd"
APACHE_CJD_PATH="httpd-cjd"

BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

echo "-----> build dir...."
echo $BUILD_DIR
echo "-----> cache dir...."
echo $CACHE_DIR
echo "-----> lp dir...."
echo $LP_DIR

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
if [ -f $CACHE_DIR/www/lib ]; then
    mv $CACHE_DIR/www/lib .
fi
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

# use our .htaccess if one doesn't exist
if [ ! -f www/.htaccess ]; then
  cp $LP_DIR/conf/dothtaccess www/.htaccess
fi

#echo 'Downloading Apache $APACHE_VERSION....'
#curl -L http://www.us.apache.org/dist/httpd/httpd-2.4.23.tar.gz | tar xz
#curl -L http://www.us.apache.org/dist/httpd/httpd-2.4.23-deps.tar.gz | tar xz


#cd httpd-2.4.23

#echo '---> SHOW WHERE HOME IS '
#echo $HOME

#ln -s /tmp/app /home/vcap/app

#head "Configuring Apache with args: $CONFIGURE_ARGS"
#./configure --prefix=$BUILD_DIR/httpd-cjd
#echo '---> Compiling with Make'
#make -s -j 9
#echo '---> Installing with Make'
#make install -s

#echo '---> Fetching Apache2'
#wget --progress=dot:mega http://apache.claz.org//httpd/httpd-2.4.23.tar.gz

#echo '---> Building Apache2'
#tar -zxvf httpd-2.4.23.tar.gz
#cd httpd-2.4.23
#./configure --prefix=/app/httpd --enable-rewrite
#echo '---> Ready to build Apache2'
#make
#echo '---> Ready to install Apache2'
#make install



#echo '---> Ready to install APR'
 # APR
#wget http://apache.cs.utah.edu//apr/apr-1.5.2.tar.gz
#tar -xvzf apr-1.5.2.tar.gz
#cd apr-1.5.2/
#./configure
#make
#make install
#cd ..

#echo '---> Ready to install APR Utils'
# APR Utils
#wget http://mirrors.advancedhosters.com/apache//apr/apr-util-1.5.4.tar.gz
#tar -xvzf apr-util-1.5.4.tar.gz
#cd apr-util-1.5.4
